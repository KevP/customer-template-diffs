<?xml version="1.0" encoding="UTF-8"?>
<devicetemplate>
    <tasks>
        <task display_name="RR GEMS BI Data File Export" name="RR_GEMS_BIDataExport" type="fileout" access="winexe">
            <commands>
                <!--  1.  Create the share on the server  -->
                <command type="call" taskname="verify_and_create_share" />
                <!-- 12.  Copy the file into osirium share directory to fetch it... -->
                <command format="output_text">
                    copy /Y E:\Support\Reporting\BIDataExport\Export\MDMDevice_GC_RR.csv %(share_directory)s\%(device_name)s
                    <success type="ci_in" value="copied." />
                    <success type="ci_match" value="" />
                    <success type="ci_in" value="The command completed successfully." />
                    <failed message="There was a problem with the task. Please contact your Osirium administrator." type="default" />
                </command>
                <command type="local_shell" command="smb.get" source="//%(share_root)s%(device_name)s/MDMDevice_GC_RR.csv" destination="%(local_filename)s">
                    <local_filename>%(filestore_location)s/%(device_name)s/MDMDevice_GC_RR.csv</local_filename>
                    <success type="ci_match" value="" />
                    <failed message="There was a problem with fetching the file." type="default" />
                </command>
            </commands>
        </task>
    </tasks>
</devicetemplate>